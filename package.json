{
  "name": "@svelteuse/router",
  "version": "0.1.14",
  "description": "Useful svelte router helper",
  "keywords": [
    "svelte",
    "router",
    "typescript",
    "svelteuse"
  ],
  "homepage": "https://github.com/svelteuse/router#readme",
  "bugs": {
    "url": "https://github.com/svelteuse/router/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svelteuse/router.git"
  },
  "license": "ISC",
  "author": "Alexander Niebuhr <45965090+alexanderniebuhr@users.noreply.github.com>",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./node": {
      "require": "./dist/node/node.js",
      "import": "./dist/node/node.mjs"
    }
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "node": [
        "./dist/node.d.ts"
      ]
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "c8 --reporter=lcov --reporter=text --all --include src uvu -r sucrase/register tests",
    "dev": "npm run build -- --watch --sourcemap",
    "build": "tsup src/index.ts src/node/node.ts --dts --format cjs,esm --out-dir dist",
    "build:clean": "rimraf dist && npm run build",
    "check": "npx taze@latest major",
    "sort": "npx sort-package-json@latest",
    "prepublishOnly": "npm run build:clean"
  },
  "devDependencies": {
    "@alexanderniebuhr/style": "1.0.13",
    "@nbhr/utils": "0.0.29",
    "@types/node": "16.6.1",
    "c8": "7.8.0",
    "regexparam": "2.0.0",
    "rimraf": "3.0.2",
    "sucrase": "3.20.1",
    "svelte": "^3.42.1",
    "tsup": "4.13.1",
    "typescript": "4.3.5",
    "uvu": "0.5.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
